# Database Configuration
# Copy this file to .env and fill in your actual values
# For Render.com, set these in the Environment Variables section of your service

# Database Host
# For Render PostgreSQL: dpg-xxxxx-a.render.com
# For local MySQL: localhost
DB_HOST=localhost

# Database Name
DB_NAME=blog_db

# Database Username
# For Render: your database user
# For local: root
DB_USER=root

# Database Password
# For Render: your database password
# For local: your MySQL password
DB_PASS=your_password_here

# Database Type
# Options: pgsql (PostgreSQL) or mysql (MySQL)
# Auto-detected if not set (checks hostname for 'postgres' or 'dpg-')
DB_TYPE=mysql

# Database Port
# PostgreSQL default: 5432
# MySQL default: 3306
# Optional - defaults will be used if not set
DB_PORT=3306

# Database Charset (MySQL only)
# PostgreSQL doesn't use this
DB_CHARSET=utf8mb4
